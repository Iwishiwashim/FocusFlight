{
  "name": "focusflight",
  "productName": "FocusFlight",
  "version": "1.0.0",
  "description": "A cinematic focus timer that boards a flight from your origin to your destination.",
  "author": "Your Name or Company",
  "license": "MIT",
  "main": "main.js",
  "private": true,

  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist"
  },

  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1"
  },

  "build": {
    "appId": "com.yourco.focusflight",
    "artifactName": "FocusFlight-${version}-${arch}.${ext}",
    "files": [
      "main.js",
      "app/**",
      "package.json"
    ],
    "extraResources": [
      "LICENSE",
      "THIRD_PARTY_NOTICES.md"
    ],
    "directories": {
      "output": "dist"
    },

    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "App_icon.png"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FocusFlight",
      "license": "LICENSE",
      "artifactName": "FocusFlight-Setup-${version}.exe"
    },

    "portable": {
      "artifactName": "FocusFlight-Portable-${version}-${arch}.exe"
    },

    "publish": null
  }
}
